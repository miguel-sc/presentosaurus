{
  "name": "pyroslides",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "husky": "3.0.9",
    "lerna": "3.18.1",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguel-sc/pyro.git"
  },
  "author": "Miguel Santos Correa <mail@miguelsantoscorrea.com>",
  "homepage": "https://github.com/miguel-sc/pyro#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx,ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": "always"
  }
}
