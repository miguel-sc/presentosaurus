{
  "name": "pyroslides",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "lerna link",
    "start": "lerna run start --parallel",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "husky": "4.0.8",
    "lerna": "3.20.2",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguel-sc/pyro.git"
  },
  "author": "Miguel Santos Correa <mail@miguelsantoscorrea.com>",
  "homepage": "https://github.com/miguel-sc/pyro#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{tsx,ts,js,css,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": "always"
  }
}
